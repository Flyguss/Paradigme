<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
 https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="praticiens\entitees\MotifVisite"
            table="motif_visite">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <many-to-one field="specialite" target-entity="praticiens\entitees\Specialite"
            inversed-by="motifsVisite">
            <join-column name="specialite_id" referenced-column-name="id"/>
        </many-to-one>
        <field name="libelle"
            column="libelle"
            length="48"
            type="string"/>
        <many-to-many field="praticiens"
                      target-entity="praticiens\entitees\Praticien"
                      inversed-by="motifVisites">
            <join-table name="praticien2moyen">
                <join-columns>
                    <join-column name="moyen_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="praticien_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>


</doctrine-mapping>