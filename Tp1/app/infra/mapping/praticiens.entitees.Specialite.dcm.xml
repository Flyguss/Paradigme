<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
 https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">


    <entity name="praticiens\entitees\Specialite"
            table="specialite">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="libelle"
               column="libelle"
               length="48"
               type="string"/>
        <field name="description"
               column="description"
               type="text"/>
        <one-to-many field="praticiens"
                     target-entity="praticiens\entitees\Praticien"
                     mapped-by="praticien">
        </one-to-many>
        <one-to-many field="motifsVisite"
            target-entity="praticiens\entitees\MotifVisite"
            mapped-by="specialite">
        </one-to-many>
    </entity>


</doctrine-mapping>